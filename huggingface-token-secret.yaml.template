# Template for Hugging Face token Kubernetes secret
# 1. Copy this file: cp huggingface-token-secret.yaml.template huggingface-token-secret.yaml
# 2. Replace YOUR_HUGGINGFACE_TOKEN_HERE with your actual token
# 3. Apply with: kubectl apply -f huggingface-token-secret.yaml
apiVersion: v1
kind: Secret
metadata:
  name: huggingface-token
type: Opaque
stringData:
  HF_TOKEN: "YOUR_HUGGINGFACE_TOKEN_HERE"
